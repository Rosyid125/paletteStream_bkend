# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=palettestream

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000

# CORS Configuration - Multiple domains separated by comma
# Development example:
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Production example:
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Mixed environment example:
# CORS_ORIGIN=http://localhost:5173,https://yourdomain.com,https://staging.yourdomain.com

# Email Configuration (if needed)
EMAIL_HOST=your_email_host
